<% layout('layouts/boilerplate') %>
<div id="cluster-map"></div>
<div class="container">
  <h1 style="color: rgba(0, 0, 0, 0.927);">All Campgrounds</h1>
  <% for (let campground of campgrounds) { %>
    <div class="card mb-3">
      <div class="row no-gutters">
        <div class="col-md-4 pr-0">
          <% if (campground.images.length) { %>
            <img crossorigin="anonymous" class="img-fluid" alt="" src="<%= campground.images[0].url %>">
          <% } else { %>
            <img crossorigin="anonymous" class="img-fluid" alt="" src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png">
          <% } %>
        </div>
        <div class="col-md-8" style="background-color: rgb(37, 30, 30)">
          <div class="card-body">
            <h5 class="card-title" style="color: rgb(250, 57, 57);"><%= campground.title %></h5>
            <p class="card-text" style="-webkit-text-fill-color: aliceblue;"><%= campground.description %></p>
            <p class="card-text">
              <small class="text-muted" style="-webkit-text-fill-color: aliceblue"><%= campground.location %></small>
            </p>
            <a class="btn btn-danger" href="/campgrounds/<%= campground._id %>">View <%= campground.title %></a>
          </div>
        </div>
      </div>
    </div>
  <% } %>
</div>

<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  const campgrounds = { features: <%- JSON.stringify(campgrounds) %> }
</script>
<script src="/javascripts/clusterMap.js"></script>

<link rel="stylesheet" href="/stylesheets/app.css">
