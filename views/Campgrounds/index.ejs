<% layout('layout/boilerplate') -%>
<link rel="stylesheet" href="/stylesheets/index.css" />
<div id="map" style="width: 100%; height: 500px; margin-bottom: 20px"></div>
<h1>All Campgrounds</h1>
<% for(let i of campgrounds){ %>
<div class="card">
    <div class="row">
        <div class="col-md-4">
            <img src="<%= i.images[0].url %>" alt="" class="img-fluid" />
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= i.title %></h5>
                <p class="card-text"><%= i.description %></p>
                <p class="card-text">
                    <small><%= i.location %></small>
                </p>
                <a href="/Campgrounds/<%= i._id %>" class="btn btn-primary"
                    >View <%= i.title %></a
                >
            </div>
        </div>
    </div>
</div>
<% } %>

<script>
    const geodata = {features :<%- JSON.stringify(campgrounds) %>}
</script>
<script src="/scripts/clustermap.js"></script>
