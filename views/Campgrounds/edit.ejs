<% layout('layout/boilerplate') -%>

<div class="row">
    <h1 class="text-center">EditCampground</h1>
    <div class="col-6 offset-3">
        <form
            action="/campgrounds/<%= camp._id %>?_method=PUT"
            method="POST"
            novalidate
            class="validated-form"
            enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="Title">Title</label>
                <input
                    required
                    value="<%= camp.title %>"
                    class="form-control"
                    type="text"
                    name="campground[title]"
                    id="Title" />
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="Location">Location</label>
                <input
                    required
                    value="<%= camp.location %>"
                    class="form-control"
                    type="text"
                    name="campground[location]"
                    id="Location" />
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="Price">Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input
                        required
                        value="<%= camp.price %>"
                        name="campground[price]"
                        type="text"
                        id="Price"
                        class="form-control"
                        placeholder="0.0"
                        aria-label="Price"
                        aria-describedby="price-label" />
                    <div class="valid-feedback">Looks good!</div>
                </div>
            </div>
            <div class="mb-3">
                    <label for="formFileMultiple" class="form-label">Images</label>
                    <input class="form-control" name="image" type="file" id="formFileMultiple" multiple>
            </div>
            <div class="mb-3">
                <label class="form-label" for="Description">Description</label>
                <textarea
                    required
                    class="form-control"
                    name="campground[description]"
                    id="Description">
                <%= camp.description %></textarea>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <% camp.images.forEach(function(img , i){  %>
                    <img src="<%= img.thumbnail  %>" alt="" class="img-thumbnail">
                    <div class="form-check-inline">
                        <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename  %>">
                    </div>
                    <label for="image-<%= i %>">Delete?</label>
                <% }) %>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Campground</button>
            </div>
        </form>
        <a href="/campgrounds">Back to all Campgrounds</a>
    </div>
</div>
